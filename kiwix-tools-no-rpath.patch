   dependencies:all_deps,
-  install:true,
-  install_rpath: join_paths(get_option('prefix'), get_option('libdir')))
+  install:true)
diff --git a/src/searcher/meson.build b/src/searcher/meson.build
index 1e220dbd..922d51a5 100644
--- a/src/searcher/meson.build
+++ b/src/searcher/meson.build
@@ -1,4 +1,3 @@
 executable('kiwix-search', ['kiwix-search.cpp'],
   dependencies:all_deps,
-  install:true,
-  install_rpath: join_paths(get_option('prefix'), get_option('libdir')))
+  install:true)
diff --git a/src/server/meson.build b/src/server/meson.build
index 5ce04658..f3376564 100644
--- a/src/server/meson.build
+++ b/src/server/meson.build
@@ -4,5 +4,4 @@ sources += server_resources
 
 executable('kiwix-serve', sources,
   dependencies:all_deps,
-  install:true,
-  install_rpath: join_paths(get_option('prefix'), get_option('libdir')))
+  install:true)
